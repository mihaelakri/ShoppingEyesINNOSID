<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <corners android:radius="8dp"/>
            <gradient
                android:angle="135"
                android:startColor="#00DDD0"
                android:endColor="#024F95"
                android:type="linear" />
            <size android:width="32dp"
                android:height="32dp"/>
        </shape>
    </item>

    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape>
            <corners android:radius="8dp"/>
            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>