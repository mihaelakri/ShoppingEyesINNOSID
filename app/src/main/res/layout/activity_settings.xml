<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.ShoppingEyes"
    tools:context=".Settings">

    <Switch
        android:id="@+id/highContrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="100dp"
        android:paddingTop="20dp"
        android:paddingEnd="100dp"
        android:paddingBottom="20dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="High contrast "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

    <Switch
        android:id="@+id/cameraFlash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:paddingStart="100dp"
        android:paddingTop="20dp"
        android:paddingEnd="100dp"
        android:paddingBottom="20dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="Camera flash"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/highContrast"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/highContrast"
        app:layout_constraintTop_toBottomOf="@+id/highContrast" />

    <Switch
        android:id="@+id/sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="100dp"
        android:paddingTop="20dp"
        android:paddingEnd="100dp"
        android:paddingBottom="20dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text="Sound"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cameraFlash"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cameraFlash"
        app:layout_constraintTop_toBottomOf="@+id/cameraFlash"
        app:layout_constraintVertical_bias="0.282" />

    <Button
        android:id="@+id/button"
        android:layout_width="239dp"
        android:layout_height="86dp"
        android:background="@drawable/white_btn"
        android:text="About us"
        android:textColor="@color/teal_700"
        android:textSize="30sp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:onClick="aboutUs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sound"
        app:layout_constraintStart_toStartOf="@+id/sound"
        app:layout_constraintTop_toBottomOf="@+id/sound" />

</androidx.constraintlayout.widget.ConstraintLayout>